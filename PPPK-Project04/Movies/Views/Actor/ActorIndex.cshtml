@model IEnumerable<Movies.Actor>

@{
    ViewBag.Title = "ActorIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Actor Index</h2>

<p>
    @Html.ActionLink("Create New Actor", "CreateActor")
    |
    @Html.ActionLink("Movie", "Index", "Movie")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IDActor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MovieIDMovie)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IDActor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MovieIDMovie)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditActor", new { id = item.IDActor }) |
                @Html.ActionLink("Details", "DetailsActor", new { id = item.IDActor }) |
                @Html.ActionLink("Delete", "DeleteActor", new { id = item.IDActor })
            </td>
        </tr>
    }

</table>
